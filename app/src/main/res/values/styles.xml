<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customColorPrimary</item>
        <item name="colorPrimaryDark">@color/customColorPrimaryDark</item>
        <item name="colorAccent">@color/customColorAccent</item>

        <item name="android:listViewStyle">@style/CustomListView</item>

    </style>

    <style name="CustomListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">#FFEB3B</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
